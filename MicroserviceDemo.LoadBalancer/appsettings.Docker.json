{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JaegerOptions": {
    "ServiceName": "LoadBalancer"
  },
  "ConsulOptions": {
    "DiscoveryAddress": "http://microservice-demo-consul:8500",
    "Name": "load-balancer",
    "ID": "load-balancer",
    "HealthCheckEndPoint": "api/healths/status"
  },
  "ReverseProxy": {
    "Routes": {
      "serviceA-route": {
        "ClusterId": "serviceA-cluster",
        "Match": {
          "Path": "serviceA/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "serviceA"
          }
        ]
      }
    },
    "Clusters": {
      "LoadBalancingPolicy": "RoundRobin",
      "serviceA-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://microservice-demo-servicea1:5029"
          },
          "destination2": {
            "Address": "http://microservice-demo-servicea2:5030"
          },
          "destination3": {
            "Address": "http://microservice-demo-servicea3:5031"
          }
        }
      }
    }
  }
}
